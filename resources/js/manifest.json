{
  "name": "cards-to-read",
  "version": "0.0.1",
  "browser_action": {
      "default_title": "Cards to Read",
      "default_popup": "popup.html",
      "default_icon": {
        "19": "icon19.png",
        "38": "icon38.png"
      }

  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
 "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["cards_to_read.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "chrome_url_overrides": {
    "newtab": "new-tab.html"
  },
  "background": {
    "scripts": ["cards_to_read.js", "background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://trello.com/; object-src 'self'",
  "permissions": ["https://trello.com/"]
}

